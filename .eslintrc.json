{
  "root": true,
  "extends": [
    "eslint:recommended"
  ],
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["jest"],
  "overrides": [
    {
      "files": ["**/*.ts"],
      "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
      },
      "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
      ],
      "overrides": [
      ],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": "latest"
      },
      "plugins": [
        "@typescript-eslint"
      ],
      "rules": {
        "quotes": ["error", "single"]
      }
    }
  ]
}
